@model IEnumerable<BookWorm.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]">
                    @Html.DisplayNameFor(model => model.Title)
                    @if (ViewData["TitleSortParm"].ToString().Contains("desc"))
                    {
                        <span>&#9660;</span>  <!-- Descending arrow -->
                    }
                    else
                    {
                        <span>&#9650;</span>  <!-- Ascending arrow -->
                    }
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AuthorSortParm"]">
                    @Html.DisplayNameFor(model => model.Author)
                    @if (ViewData["AuthorSortParm"].ToString().Contains("desc"))
                    {
                        <span>&#9660;</span>  <!-- Descending arrow -->
                    }
                    else
                    {
                        <span>&#9650;</span>  <!-- Ascending arrow -->
                    }
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]">
                    @Html.DisplayNameFor(model => model.Price)
                    @if (ViewData["PriceSortParm"].ToString().Contains("desc"))
                    {
                        <span>&#9660;</span>  <!-- Descending arrow -->
                    }
                    else
                    {
                        <span>&#9650;</span>  <!-- Ascending arrow -->
                    }
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Book Image" class="img-thumbnail" style="max-width: 100px;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-success btn-sm" asp-action="AddToCart" asp-route-bookId="@item.Id">Add to Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>
