@model IEnumerable<BookWorm.Models.Cart>

@{
    ViewData["Title"] = "Your Cart";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookName</td>
                <td>@item.Price.ToString("C")</td> <!-- Format as currency -->
                <td>
                    <form method="post" asp-action="RemoveFromCart" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Optionally, add a total price -->
<p>
    <strong>Total: </strong>
    @Model.Sum(item => item.Price).ToString("C") <!-- Calculate and display total price -->
</p>

<!-- Optionally, add a button to proceed with checkout -->
<a class="btn btn-primary" href="@Url.Action("Checkout", "Cart")">Proceed to Checkout</a>
